{
  "title": "Accounts & Campaigns",
  "$schema": "accountscampaigns.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "accounts": {
      "title": "Accounts",
      "type": "array",
      "format": "grid",
      "uniqueItems": false,
      "options": {
        "disable_collapse": true,
        "grid_columns": 12
      },
      "items": {
        "headerTemplate": " ",
        "type": "object",
        "format": "grid",
        "options": {
          "collapsed": false,
          "disable_collapse": true,
          "grid_columns": 12
        },
        "properties": {
          "providerAccountId": {
            "title": "Account",
            "$ref": "#/definitions/providerAccountId"
          },
          "multiple": {
            "type": "boolean",
            "format": "checkbox",
            "title": "Multiple",
            "options": {
              "grid_columns": 1,
              "infoText": "Instead of sending all data from this provider account into a single campaign, enable this to map specific provider campaigns to multiple internal campaigns."
            },
            "default": false
          },
          "campaignId": {
            "title": "Singular Campaign",
            "$ref": "#/definitions/campaignId"
          },
          "campaigns": {
            "title": " ",
            "type": "array",
            "format": "grid",
            "uniqueItems": false,
            "options": {
              "grid_columns": 12,
              "disable_collapse": true
            },
            "items": {
              "title": "Campaign",
              "$ref": "#/definitions/campaigns"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "campaigns": {
      "headerTemplate": " ",
      "type": "object",
      "format": "grid",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "providerCampaignId": {
          "$ref": "#/definitions/providerCampaignId"
        },
        "campaignId": {
          "$ref": "#/definitions/campaignId"
        }
      }
    },
    "providerAccountId": {
      "headerTemplate": "Provider Account {{self}}",
      "title": "Provider Account",
      "propertyOrder": 10,
      "default": "0",
      "readOnly": true,
      "options": {
        "grid_columns": 1,
        "infoText": "Account from the third-party media provider."
      },
      "enumSource": [
        {
          "source": [
            {
              "value": 0,
              "title": "-- Please create an Account --"
            }
          ],
          "title": "{{item.title}}",
