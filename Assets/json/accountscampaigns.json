        }
      ]
    },
    "providerCampaignId": {
      "headerTemplate": "Provider Campaign {{self}}",
      "title": "Provider Campaign",
      "propertyOrder": 10,
      "default": "0",
      "readOnly": true,
      "options": {
        "grid_columns": 1,
        "infoText": "Campaign from the third-party media provider."
      },
      "enumSource": [
        {
          "source": [
            {
              "value": 0,
              "title": "-- Please create a Campaign --"
            }
          ],
          "title": "{{item.title}}",
          "value": "{{item.value}}"
        }
      ]
    },
    "campaignId": {
      "headerTemplate": "Campaign {{self}}",
      "title": "Campaign",
      "propertyOrder": 20,
      "default": "0",
      "format": "select",
      "options": {
        "grid_columns": 1,
        "infoText": "Select a campaign to attribute this Provider account to."
      },
      "enumSource": [
        {
          "source": [
            {
              "value": 0,
              "title": "-- Please create a Campaign --"
            }
          ],
          "title": "{{item.title}}",
          "value": "{{item.value}}"
        }
      ]
